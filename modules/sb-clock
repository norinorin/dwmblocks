#!/bin/sh

if [ "$BLOCK_BUTTON" = "1" ]; then
	setsid -f "$TERMINAL" -e calcurse
fi

clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

icon="ï³"

bg="#f38ba8"
fg="#313244"

#dbg="$(xgetres color13)"
#dbg=${dbg:="#001429"}
#bg="$(xgetres color13)"
#bg=${bg:="#001f3d"}
printf "^c$fg^^b$bg^ %s ^d^^c$bg^ %s^d^" "$icon" "$(date '+%a, %d %b %H:%M')"

