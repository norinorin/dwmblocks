#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

icon="ï—¯"

dbg="#b70c4a"
bg="#e50f5c"
#dbg="$(xgetres color13)"
#dbg=${dbg:="#001429"}
#bg="$(xgetres color13)"
#bg=${bg:="#001f3d"}
printf "^c#111111^^b$dbg^ %s ^c#111111^^b$bg^ %s ^d^" "$icon" "$(date '+%a, %d %b %H:%M')"

